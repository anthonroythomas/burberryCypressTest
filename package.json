{
  "name": "cypress-test-framework",
  "version": "1.0.0",
  "description": "Modern Cypress E2E Testing Framework",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "cy:run:headed": "cypress run --headed",
    "cy:run:spec": "cypress run --spec",
    "cy:run:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "cy:run:tablet": "cypress run --config viewportWidth=768,viewportHeight=1024",
    "cy:record": "cypress run --record --key YOUR_RECORD_KEY",
    "cy:parallel": "cypress run --parallel --record --key YOUR_RECORD_KEY",
    "test:smoke": "cypress run --env tags=@smoke",
    "test:regression": "cypress run --env tags=@regression",
    "test:api": "cypress run --spec 'cypress/e2e/api/**/*'",
    "test:ui": "cypress run --spec 'cypress/e2e/ui/**/*'",
    "lint": "eslint cypress/**/*.{js,ts}",
    "lint:fix": "eslint cypress/**/*.{js,ts} --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.0",
    "@cypress/grep": "^4.0.1",
    "@faker-js/faker": "^9.9.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cypress": "^13.17.0",
    "cypress-axe": "^1.5.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-image-diff-js": "^2.0.0",
    "cypress-mailhog": "^1.6.0",
    "cypress-mochawesome-reporter": "^3.7.0",
    "cypress-multi-reporters": "^1.6.4",
    "cypress-real-events": "^1.11.0",
    "dayjs": "^1.11.0",
    "eslint": "^8.45.0",
    "faker": "^5.5.3",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "automation",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
